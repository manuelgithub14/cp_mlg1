{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('miMain') }}"> CyberTrap TCG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Mostrar secciones">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            {% set ruta = app.request.get('_route') %}
            <ul class="navbar-nav mr-auto">
                <li class="nav-item{% if ruta == "portada" %} active{% endif %}">
                    <a class="nav-link" href="{{ path('portada') }}"><i class="fas fa-vihara"></i> Portada <span class="sr-only">(actual)</span></a>
                </li>
                <li class="nav-item{% if ruta starts with "user_" %} active{% endif %}">
                    <a class="nav-link" href="{{ path('user_list') }}"><i class="fas -jedi fa-jedi"></i>CyberLords</a>
                </li>
                <li class="nav-item {% if ruta starts with "card_" %} active{% endif %}">
                    <a class="nav-link" href="{{ path('card_list') }}"><i class="fas -solar-panel fa-solar-panel"></i>Cartas</a>
                </li>
                {% if is_granted('ROLE_PLAYER') %}
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-coins"></i>Mercado</a>
                </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item {% if ruta starts with "card_" %} active{% endif %}">
                            <a class="nav-link" href="{{ path('card_list') }}">Cartas</a>
                        </li>
                    {% endif %}
                {% endif %}

            </ul>
            {% if app.user %}
            <span class="navbar-light">!Hola, {{ app.user.nickname }}!  </span>
                <a href="#" class="btn btn-outline-primary"><i class="fas fa-times"></i>EXIT</a>

            {% else %}
                <a href="{{ path('usuario_entrar') }}" class="btn btn-outline-primary"><i class="fas fa-sign-in-alt"></i> ENTRAR</a>
            {% endif %}
        </div>
    </nav>
    <div class="container">
        <div id="wrapper">


        {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}