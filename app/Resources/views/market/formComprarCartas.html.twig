{% extends 'layout.html.twig' %}

{% block content %}
    {% for mensaje in app.session.flashbag.get('exito') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ mensaje }}
        </div>
    {% endfor %}
    {% for mensaje in app.session.flashbag.get('error') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ mensaje }}
        </div>
    {% endfor %}
    <div id="fondo_tienda" style="background: url({{ asset('recursos/fondos/fondo_tienda2.jpg') }}">
        <form action="{{ path('carta_comprar_una',{'id':usuario.id} ) }}" method="post">
            <p><button type="submit" name="one" class="btn btn-outline-primary">Adquirir carta</button></p>

        </form>
        <form action="{{ path('carta_comprar_pack',{'id':usuario.id} ) }}" method="post">
            <p><button type="submit" name="one" class="btn btn-outline-primary">Adquirir pack</button></p>

        </form>

    </div>

{% endblock %}